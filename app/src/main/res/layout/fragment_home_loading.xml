<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant">

    <LinearLayout
        android:id="@+id/linear1_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/common_margin_min"
        android:layout_marginTop="@dimen/common_margin_min"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="?attr/colorSecondary"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="?attr/colorSecondary"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="?attr/colorSecondary"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="?attr/colorSecondary"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/common_margin_min"
        app:layout_constraintTop_toBottomOf="@id/linear1_loading" >

        <ImageView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="?attr/colorSecondary"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="?attr/colorSecondary"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="?attr/colorSecondary"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="300dp"
            android:layout_marginHorizontal="@dimen/common_margin_min"
            android:layout_marginVertical="@dimen/common_margin_min"
            android:background="?attr/colorSecondary"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>